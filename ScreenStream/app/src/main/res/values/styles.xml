<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StartActivityTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="material_drawer_divider">@color/colorDrawerDivider</item>
        <item name="material_drawer_primary_text">@color/colorDrawerPrimaryText</item>
    </style>

    <style name="SettingsCheckBox" parent="AppTheme">
        <item name="colorControlNormal">@color/colorSettingsCheckBoxNormal</item>
        <item name="colorControlActivated">@color/colorSettingsCheckBoxActivated</item>
    </style>
</resources>